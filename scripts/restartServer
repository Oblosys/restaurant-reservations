# not suitable for multiple servers yet, since killall will kill all node servers
killall node
cd ~/svn/Oblomov/JavaScript/Reservations

node js/server.js >> nodeServerOutput.txt 2>&1 &

# Wait a bit and show initial output to see if the server actually started
# (cannot use $? because background shell command always exits succesfully)
sleep 0.2
echo -------- Showing server output tail: --------
tail nodeServerOutput.txt
echo --------- End of server output tail ---------
echo
# when put in crontab, use:
#    @reboot ~/svn/Oblomov/JavaScript/Reservations/scripts/restartServer >/dev/null 2>&1
